<?xml version="1.0"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" creationComplete="init()" paddingLeft="0" paddingTop="0" paddingRight="0" paddingBottom="0">
    <mx:Script><![CDATA[
        private function init():void {
            processEngineService.send();
        }

    ]]></mx:Script>

    <mx:HTTPService id="processEngineService" url="http://localhost:8088/process?method=getProcessEngines" resultFormat="e4x"/>
    <mx:XMLListCollection id="processEngineList" source="{processEngineService.lastResult.list}"/>

    <mx:HDividedBox width="100%" height="100%">
        <mx:VBox width="17%" height="100%">
            <mx:Tree width="100%" id="processEngineTree" height="100%" dataProvider="{processEngineList}" labelField="@id"/>
        </mx:VBox>

        <mx:VBox width="62%">
            <mx:Label text="Center"/>
            <mx:TitleWindow label="Title Window" width="100%" height="100%"/>
        </mx:VBox>

        <mx:VBox width="20%" height="100%">
            <mx:Accordion width="100%" height="100%">
                <mx:Form label="流程引擎配置" paddingLeft="0" paddingRight="0">
                    <mx:FormItem label="ProcessEngineName">
                        <mx:TextInput text=""/>
                    </mx:FormItem>
                    <mx:FormItem label="DatabaseSchemaUpdate">
                        <mx:TextInput/>
                    </mx:FormItem>
                </mx:Form>

                <mx:Form label="流程定义">

                </mx:Form>

                <mx:TitleWindow label="流程引擎信息">
                    <mx:DataGrid>
                        <mx:columns>
                            <mx:DataGridColumn headerText="" dataField="name"/>
                            <mx:DataGridColumn headerText="" dataField="value"/>
                        </mx:columns>
                        <mx:dataProvider>
                            <mx:Object name="ProcessEngineName" value=""/>
                            <mx:Object name="DatabaseSchemaUpdate" value=""/>
                        </mx:dataProvider>
                    </mx:DataGrid>
                </mx:TitleWindow>
                <mx:Panel>

                </mx:Panel>
            </mx:Accordion>
        </mx:VBox>
    </mx:HDividedBox>
</mx:Application>
